@page "/egress"

<PageTitle>Egress - Data Output</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-arrow-up-circle"></i> Egress
            </h1>
            <p class="text-muted mb-4">
                Configure and manage data output connections and external integrations.
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="empty-state-card">
                <div class="empty-state-icon">
                    <i class="bi bi-arrow-up-circle"></i>
                </div>
                <h3 class="empty-state-title">No Egress Points Available</h3>
                <p class="empty-state-description">
                    Egress functionality is currently under development. This feature will allow you to:
                </p>
                <ul class="feature-list">
                    <li>
                        <i class="bi bi-check-circle text-primary"></i>
                        Configure external data exports
                    </li>
                    <li>
                        <i class="bi bi-check-circle text-primary"></i>
                        Set up real-time data streaming
                    </li>
                    <li>
                        <i class="bi bi-check-circle text-primary"></i>
                        Manage API endpoints and webhooks
                    </li>
                    <li>
                        <i class="bi bi-check-circle text-primary"></i>
                        Monitor outbound data flow
                    </li>
                    <li>
                        <i class="bi bi-check-circle text-primary"></i>
                        Configure data transformation pipelines
                    </li>
                </ul>
                <div class="empty-state-actions">
                    <a href="/settings" class="btn btn-primary">
                        <i class="bi bi-gear me-2"></i>
                        Configure Connections
                    </a>
                    <a href="/liveview" class="btn btn-outline-secondary">
                        <i class="bi bi-diagram-3 me-2"></i>
                        View Data Model
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Placeholder Cards for Future Features -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="feature-preview-card">
                <div class="feature-icon">
                    <i class="bi bi-cloud-upload"></i>
                </div>
                <h5>Cloud Integrations</h5>
                <p>Connect to AWS IoT, Azure IoT Hub, Google Cloud IoT, and other cloud platforms.</p>
                <span class="badge bg-secondary">Coming Soon</span>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="feature-preview-card">
                <div class="feature-icon">
                    <i class="bi bi-api"></i>
                </div>
                <h5>REST API Endpoints</h5>
                <p>Expose your UNS data through RESTful APIs with authentication and rate limiting.</p>
                <span class="badge bg-secondary">Coming Soon</span>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="feature-preview-card">
                <div class="feature-icon">
                    <i class="bi bi-database-up"></i>
                </div>
                <h5>Data Warehouses</h5>
                <p>Stream data to time-series databases, data lakes, and analytics platforms.</p>
                <span class="badge bg-secondary">Coming Soon</span>
            </div>
        </div>
    </div>
</div>