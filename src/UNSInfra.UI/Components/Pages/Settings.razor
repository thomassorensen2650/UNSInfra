    {
        if (inputOutputConfigurations == null) return Enumerable.Empty<InputOutputConfiguration>();
        
        return inputOutputConfigurations.Where(c => 
            c.Type == InputOutputType.Input && 
            !string.IsNullOrEmpty(c.ConnectionId) && 
            c.ConnectionId == connectionId);
