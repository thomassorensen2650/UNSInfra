{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Storage": {
    "Provider": "SQLite",
    "ConnectionString": "Data Source=unsinfra-dev.db;Cache=Shared;Pooling=True;",
    "EnableWalMode": true,
    "CommandTimeoutSeconds": 30,
    "CacheSize": 1000,
    "Comment": "Provider options: SQLite, InMemory. IRealtimeStorage is always InMemory for performance."
  },
  "HistoricalStorage": {
    "Enabled": true,
    "StorageType": "InMemory",
    "ConnectionString": "",
    "InMemory": {
      "MaxValuesPerDataPoint": 500,
      "MaxTotalValues": 50000,
      "AutoCleanup": true
    },
    "SQLite": {
      "DatabasePath": "historical-data-dev.db",
      "EnableWAL": true,
      "RetentionDays": 30,
      "AutoCleanup": true
    }
  }
}
